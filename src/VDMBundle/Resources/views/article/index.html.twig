{% extends '@VDM/layout_admin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="text-center title_section">Liste des VDM</h1>

        <table id="list_vdm" class="display" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Datepost</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                    <td>{% if article.datePost %}{{ article.datePost|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('_edit', { 'id': article.id }) }}">Modifier</a>
                            </li>
                            <li>
                                <a href="{{ path('_delete', { 'id': article.id }) }}">Supprimer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-lg btn-primary btn-block btn-signin" href="{{ path('_new') }}">Ajouter une nouvelle VDM</a>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#list_vdm').DataTable();
        } );
    </script>
{% endblock %}
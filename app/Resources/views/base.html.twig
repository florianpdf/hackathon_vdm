<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}VDM au Camping!{% endblock %}</title>

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('bundles/vdm/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('bundles/vdm/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

        <!-- Plugin CSS -->
        <link href="{{ asset('bundles/vdm/vendor/magnific-popup/magnific-popup.css') }}" rel="stylesheet">

        <!-- Theme CSS -->
        <link href="{{ asset('bundles/vdm/css/creative.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/vdm/css/style.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body id="page-top">

        <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand page-scroll" href="{{ path('homepage') }}">L'app des campeur</a>
                </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li>
                                    <a>Connecter en tant que {{ app.user.username }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_security_logout') }}">Se deconnecter</a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_registration_register') }}">S'enregistrer</a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="page-scroll" href="{{ path('_new') }}">Ajouter une VDM</a>
                                </li>
                                <li>
                                    <a class="page-scroll" href="{{ path('_index') }}">Voir toutes les VDM</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>

        {% block body %}{% endblock %}

        <section id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                        <h2 class="section-heading">Oui ! Je m'appelle <a href="">Seb</a> et alors ? Pourquoi c'est moi qui changerais de nom ?</h2>
                        <hr class="primary">
                    </div>
                    <div class="col-lg-4 col-lg-offset-2 text-center">
                        <i class="fa fa-phone fa-3x sr-contact"></i>
                        <p>123-456-6789</p>
                    </div>
                    <div class="col-lg-4 text-center">
                        <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                        <p><a href="#">seb@vdm.fr</a></p>
                    </div>
                </div>
            </div>
        </section>

        <!-- jQuery -->
        <script src="{{ asset('bundles/vdm/vendor/jquery/jquery.min.js') }}"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('bundles/vdm/vendor/bootstrap/js/bootstrap.min.js') }}"></script>

        <!-- Plugin JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
        <script src="{{ asset('bundles/vdm/vendor/scrollreveal/scrollreveal.min.js') }}"></script>
        <script src="{{ asset('bundles/vdm/vendor/magnific-popup/jquery.magnific-popup.min.js') }}"></script>

        <!-- Theme JavaScript -->
        <script src="{{ asset('bundles/vdm/js/creative.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
